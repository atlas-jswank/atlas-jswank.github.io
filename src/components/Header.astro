<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--off-white-light);
    color: var(--blue);
    box-shadow: 0 2px 8px var(--blue);
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    padding: 1rem 1.3rem;
  }
  h2 {
    margin: 0;
    font-size: 1em;
    display: flex;
    align-items: center;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--blue);
    /* border-bottom: 4px solid transparent; */
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  .logo {
    width: 50px;
    transform: rotate(-24deg);
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
