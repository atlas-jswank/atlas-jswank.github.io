---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, heroImage, pubDate, author, authorImage } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .author {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding-top: 48px;
        color: var(--blue-light);
      }
      .author span {
        line-height: 1.3;
      }
      .author-image {
        border-radius: 50px;
      }
      main {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
      }
      .hero-image {
        width: 100%;
        margin-top: 3rem;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose-wrapper {
        color: var(--blue);
        background-color: var(--off-white-light);
        margin-top: 3rem;
        border-top-left-radius: 30px;
        border-top-right-radius: 30px;
      }
      .prose {
        width: 820px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      hr {
        border-top: 1px solid var(--blue);
        /* margin-inline: 5rem; */
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="prose-wrapper">
          <div class="prose">
            <div class="author">
              <img
                width={70}
                height={70}
                src={authorImage}
                alt="author"
                class="author-image"
              />
              <span>{author}</span>
              <span><FormattedDate date={pubDate} /></span>
            </div>
            <div class="title">
              <h1>{title}</h1>
            </div>
            <slot />
          </div>
        </div>
      </article>

      <Footer />
    </main>
  </body>
</html>
